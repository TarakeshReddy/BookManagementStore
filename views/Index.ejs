<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books</title>
    <style>
        /* Body style */
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        /* Container style */
        .container {
            max-width: 100%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            align-items: flex-start; /* Align input on the left */
        }

        /* Heading style */
        h1 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
        }

        /* List style for books */
        ul {
            list-style-type: none;
            padding: 0;
        }

        /* Book item style */
        li {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        /* Image style */
        img {
            height: 150px;
            width: 200px;
            margin-right: 20px;
        }

        /* Book title style */
        strong {
            font-size: 18px;
            color: #333;
        }

        /* Search form style */
        form {
            display: flex;
            align-items: center;
            margin-bottom: 20px; /* Add margin to move the search down */
        }

        /* Search input style */
        input[type="search"] {
            width: 300px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
            margin-right: 20px; 
        }

        /* Search button style */
        button[type="submit"] {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <% if (user.isAdmin) { %>
        <%- include('layout_admin') %>
    <% } else { %>
        <%- include('layout') %>
    <% } %>    
    <div class="container">
        <form>
          <label for="searchQuery"></label>
          <input type="search" id="searchQuery" name="query" placeholder="Search books...">
          <button type="submit" onclick="search(event)">Search</button>
      </form>
        <h1>Book List</h1>
        <ul>
            <% books.forEach(function(book) { %>
                <li>
                    <img src="<%= book.image %>" alt="<%= book.title %>" height="150px" width="200px">
                    <a href="/books/<%= book._id %>"><strong><%= book.title %></strong></a>
                </li>
            <% }); %>
        </ul>
    </div>
    <script>
        async function search(event) {
    event.preventDefault();
    const searchQuery = document.getElementById("searchQuery").value;
    try {
        const res = await fetch(`http://localhost:4000/search?query=${encodeURIComponent(searchQuery)}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        });

        if (res.ok) {
            window.location.href="/index"
        } else {
            console.error(`Error: ${res.status} - ${res.statusText}`);
        }
    } catch (err) {
        console.error(err);
    }
}
    </script>
</body>
</html>
