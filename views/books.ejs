<!DOCTYPE html>
<html>
<head>
  <title><%= book.title %></title>
  <style>

    /* Body style */
    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
      margin: 0;
      padding: 0;
      background-image: url("/images/book1.jpg");
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center;
    }

    /* Page container style */
    .container {
      max-width: 40%;
      margin: 0 auto;
      padding: 20px;
      /* border: 1px solid black; */
      border-radius: 12px;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
      justify-content: center;
      /* align-items: center; */
      margin-top: 20px;
      opacity: 0.9;
    }

    /* Heading style */
    h1 {
      font-size: 24px;
      margin-bottom: 10px;
      color: #333;
      text-align: center;
    }

    /* Image style */
    img {
      height: 200px;
      width: 200px;
      margin-left: 30%;
      margin-bottom: 10px;
    }

    /* Paragraph style */
    p {
      font-size: 16px;
      margin-bottom: 5px;
      color: #444;
    }

    /* Button style */
    button {
      background-color: #007bff;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
      margin: 10px auto;
      margin-right: 10px;
    }

    button:hover {
      background-color: #0056b3;
    }

    /* Reviews section style */
    h2 {
      font-size: 20px;
      margin-top: 20px;
      margin-bottom: 10px;
      color: #333;
    }

    ul {
      list-style-type: none;
      padding: 0;
    }

    li {
      margin-bottom: 10px;
    }

    hr {
      border: 1px solid #ccc;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1><%= book.title %></h1>
    <img src="<%=book.image%>" alt="<%= book.title %>" height="200px" width="200px">
    <p>Author: <%= book.author %></p>
    <p>ISBN: <%= book.ISBN %></p>
    <p>Price: <%= book.price %>.Rs</p>
    <% if(admin) { %>
      <p>Quantity: <%= book.quantity %></p>
      <a href="/deleteBook/<%=book._id%>"><button>Delete</button></a>
      <a href="/update"><button>Update Book</button></a>
    <%}%>
    <h2>Reviews</h2>
    <% if (book.reviews.length === 0) { %>
      <p>No reviews available for this book.</p>
    <% } else { %>
      <p><%= book.reviews.rating %></p>
      <ul>
        <% book.reviews.forEach(function(review) { %>
          <li>Rating: <%= review.rating %> stars</li>
          <li>Comment: <%= review.comment %></li>
          <hr>
        <% }); %>
      </ul>
    <% } %>
    <% if(!admin) { %>
      <div class="review_cart">
        <a href="/review"><button>Review Book</button></a>
        <a href="/addcart"><button>Add to Cart</button></a>
      </div>
    <%}%>
  </div>
</body>
</html>
